<div class="h-[70vh] bg-slate-200 rounded-md p-4 flex flex-col gap-4">
    <div id="chat" class="flex-1 flex flex-col gap-2 overflow-auto">
    </div>
    <form class="flex flex-row p-2 bg-slate-300 rounded-md"
        hx-post="{{ url_for('course_chat', course_code = course.code) }}" hx-target="previous #chat" hx-swap="beforeend"
        hx-disabled-elt="find input[type='submit']" hx-on::after-request="this.reset()">
        <input type="hidden" name="conversation_id" value="{{ conversation_id }}">
        <input type="text" name="message" placeholder="Message" class="flex-1 bg-transparent focus:outline-none">
        <input type="submit" value="Send"
            class="bg-tai text-white rounded-md  disabled:bg-slate-500 py-2 px-4 hover:bg-tai-dark transition-colors duration-200 ease-in-out">
    </form>
</div>