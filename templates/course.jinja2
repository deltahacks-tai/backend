{% extends "base.jinja2" %}

{% block title %}{{ course.name }}{% endblock title %}

{% block content %}
<div class="flex flex-col">

    <div class="flex flex-row gap-4 pb-4 pt-12 ">
            <a href="{{ url_for('course_content', course_code=course.code) }}" class="bg-tai text-white rounded-md cursor-pointer disabled:bg-slate-500 py-2 px-4 hover:bg-tai-dark transition-colors duration-200 ease-in-out ">Content</a>
            <a href="{{ url_for('course_assignments', course_code=course.code) }}" class="bg-tai text-white rounded-md cursor-pointer disabled:bg-slate-500 py-2 px-4 hover:bg-tai-dark transition-colors duration-200 ease-in-out ">Assignments</a>
            <a href="{{ url_for('course_grades', course_code=course.code) }}" class="bg-tai  text-white rounded-md cursor-pointer disabled:bg-slate-500 py-2 px-4 hover:bg-tai-dark transition-colors duration-200 ease-in-out ">Grades</a> 
    </div>

    <div class="flex flex-row gap-4"> 
    <main class="flex flex-col bg-slate-200 p-4 rounded-md w-2/3">
        
        <section id="announcements" class="flex flex-col gap-4">
            <h2 class="text-2xl font-bold">Announcements</h2>
            {% for announcement in course.announcements %}
            <article class="bg-slate-300 p-4 rounded-md">
                <h3 class="font-bold text-xl">{{ announcement.title }}</h3>
                {{ announcement.date }}
                <p>{{ announcement.content }}</p>
            </article>
            {% endfor %}
        </section>
    </main>
    <aside class="flex-1">
        {% include "components/chat.jinja2" %}
    </aside>

    </div>
</div>
{% endblock content %}


